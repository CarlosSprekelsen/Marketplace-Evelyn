<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Web Login</title>
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: #f4f7fb;
        color: #1a1a1a;
      }
      .container {
        max-width: 420px;
        margin: 80px auto;
        background: #fff;
        border: 1px solid #dfe3ea;
        border-radius: 10px;
        padding: 24px;
      }
      h1 {
        margin: 0 0 16px;
        font-size: 24px;
      }
      .message {
        padding: 10px 12px;
        border-radius: 8px;
        margin-bottom: 12px;
        font-size: 14px;
      }
      .message.info {
        background: #e7f4eb;
        border: 1px solid #a8d5b5;
      }
      .message.error {
        background: #fdecec;
        border: 1px solid #efb5b5;
      }
      label {
        display: block;
        margin: 10px 0 6px;
        font-weight: 600;
      }
      input {
        width: 100%;
        box-sizing: border-box;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #c7ced8;
      }
      button {
        margin-top: 16px;
        width: 100%;
        padding: 10px 12px;
        border: 0;
        border-radius: 8px;
        background: #0b5ed7;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
      }
      .hint {
        margin-top: 14px;
        color: #5c6370;
        font-size: 13px;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <h1>Admin Web</h1>
      {{#if message}}
        <div class="message info">{{message}}</div>
      {{/if}}
      {{#if error}}
        <div class="message error">{{error}}</div>
      {{/if}}
      <form method="post" action="/admin-web/login">
        <label for="email">Email</label>
        <input id="email" name="email" type="email" required value="{{email}}" />

        <label for="password">Password</label>
        <input id="password" name="password" type="password" required />

        <button type="submit">Sign In</button>
      </form>
      <p class="hint">Only ADMIN users can access this panel.</p>
    </main>
  </body>
</html>
